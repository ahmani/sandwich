{% extends 'layout.html.twig' %}

{% block stylesheets %}
  
{% endblock %}

{% block title %}Ingredients{% endblock %}

{% block user_content %}

  <div class="container">

    <form action="{{ path_for('user.addIngredient') }}" method="POST" enctype="multipart/form-data">
              
        <legend>Ajouter ingredient :</legend>      
        <div class="form-group">
          <label for="nom">Nom :</label>
          <input type="text" class="form-control" name="inputNom" id="nom" placeholder="Nom ..." required="required">
        </div>

        <div class="form-group">
          <label for="categorie">Categorie :</label>
          <select name="inputCategorie" class="form-control" id="categorie" required="required">
            {% for categorie in categories %}
                <option value="{{ categorie.id }}">{{ categorie.nom }}</option>
            {% endfor %}
          </select>
        </div>

        <div class="form-group">
          <label for="description">Description :</label>
          <input type="text" class="form-control" name="inputDescription" id="description" placeholder="Description ...">
        </div>

        <div class="form-group">
          <label for="fournisseur">Fournisseur :</label>
          <input type="text" class="form-control" name="inputFournisseur" id="fournisseur" placeholder="Fournisseur ...">
        </div>

        <div class="form-group">
          <label for="fournisseur">Image :</label>
          <input type="file" class="form-control" name="inputImage" id="fournisseur" accept="image/*">
        </div>

        {% if message is defined %}
        <div class="form-group">
          <div class="alert alert-info">
            <strong>{{ message }}</strong>
          </div>
        </div>
        {% endif %}

        <div class="form-group">
          <button class="btn btn-lg btn-primary col-xs-6 col-xs-offset-3 col-sm-3 col-sm-offset-9" type="submit">Ajouter</button>
        </div>

        

    </form>

  </div>

{% endblock user_content %}